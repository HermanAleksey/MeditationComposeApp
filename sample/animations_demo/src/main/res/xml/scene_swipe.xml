<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/rest">

        <Constraint
            android:id="@id/topCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/buttonFullScreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/topCard"
            app:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/bottomCard"
        app:deriveConstraintsFrom="@+id/rest">

        <Constraint
            android:id="@id/topCard"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/bottomCard"
        app:constraintSetStart="@+id/rest"
        app:duration="3000">

        <OnSwipe
            app:dragDirection="dragDown"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/topCard"
            app:touchAnchorSide="bottom"
            app:touchRegionId="@id/topCard" />

        <KeyFrameSet>
            <KeyAttribute
                android:rotation="0"
                app:framePosition="0"
                app:motionTarget="@+id/topCard" />
            <KeyAttribute
                android:rotation="252"
                app:framePosition="35"
                app:motionTarget="@+id/topCard" />
            <KeyAttribute
                android:rotation="324"
                app:framePosition="70"
                app:motionTarget="@+id/topCard" />
            <KeyAttribute
                android:rotation="360"
                app:framePosition="100"
                app:motionTarget="@+id/topCard" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet
        android:id="@+id/swipedLeft"
        app:deriveConstraintsFrom="@+id/rest">
        <Constraint
            android:id="@+id/topCard"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/swipedLeft"
        app:constraintSetStart="@+id/bottomCard"
        app:duration="1000">

        <OnSwipe
            app:dragDirection="dragLeft"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/topCard"
            app:touchRegionId="@id/topCard" />
    </Transition>

    <ConstraintSet android:id="@+id/fullScreenMode">
        <Constraint
            android:id="@+id/topCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/fullScreenMode"
        app:constraintSetStart="@+id/rest"
        app:duration="3000">

        <OnClick app:targetId="@id/buttonFullScreen" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="33"
                app:keyPositionType="parentRelative"
                app:motionTarget="@+id/topCard"
                app:percentX="0"
                app:percentY="0" />

            <KeyPosition
                app:framePosition="66"
                app:keyPositionType="parentRelative"
                app:motionTarget="@+id/topCard"
                app:percentX="2"
                app:percentY="1" />
        </KeyFrameSet>

    </Transition>

</MotionScene>