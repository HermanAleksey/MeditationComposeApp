<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".xml.fragment.AnimateVectorDrawableFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animator" />

    <Button
        android:text="Вернуть этого парнишу"
        android:id="@+id/btn_animatorDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_animatorDemo"
        android:layout_width="match_parent"
        android:src="@drawable/animator_demo"
        android:layout_height="match_parent"/>

</androidx.appcompat.widget.LinearLayoutCompat>